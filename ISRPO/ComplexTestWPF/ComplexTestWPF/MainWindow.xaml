        <TextBox x:Name="FirstA" HorizontalAlignment="Left"  Margin="191,40,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="FirstB" HorizontalAlignment="Left"  Margin="339,40,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        <TextBox x:Name="SecondA" HorizontalAlignment="Left"  Margin="191,110,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SecondB" HorizontalAlignment="Left"  Margin="339,110,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Первое комплексное число" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Width="168"/>
        <Label Content="Второе комплексное число" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="168"/>
        <Label Content="Вещественная часть " HorizontalAlignment="Left" Margin="191,9,0,0" VerticalAlignment="Top"/>
        <Label Content="Мнимая часть " HorizontalAlignment="Left" Margin="353,9,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabResult" Content="" HorizontalAlignment="Left" Margin="301,231,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.6,0.502"/>
        <Label Content="Вещественная часть " HorizontalAlignment="Left" Margin="191,79,0,0" VerticalAlignment="Top"/>
        <Label Content="Мнимая часть " HorizontalAlignment="Left" Margin="353,79,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
